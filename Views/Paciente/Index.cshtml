@model IEnumerable<LAB03_ED1_G.Models.Paciente>

<title>Sala de espera | Hospital</title>

<body>
    <div style="padding-left:50px; padding-right:50px;">
        <div class="container text-center">
            <p class="display-1">Lista de Pacientes en Espera</p>
        </div>
        <hr/>
        <form asp-action="Delete" method="post">
            <div align="center">
                <button type="submit" class="btn btn-outline-success btn-lg btn-block">Atender paciente</button>
            </div>
        </form>
        <br />
        <table class="table">
            <thead style="background-color: #293241 ">
                <tr>
                    <th style="color:aliceblue">Nombres</th>
                    <th style="color:aliceblue">Apellidos</th>
                    <th style="color:aliceblue">Fecha de nacimiento</th>
                    <th style="color:aliceblue">Sexo</th>
                    <th style="color:aliceblue">Especialización a utilizar</th>
                    <th style="color:aliceblue">Método de ingreso</th>
                    <th style="color:aliceblue">Prioridad</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <tr>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellidos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FDNacimiento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sexo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Especializacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MIngreso)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PrioridadModelo)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <a class="btn btn-primary my-3" asp-action="Create">Regresar a la carga de pacientes</a>
    </div>

</body>
