@model IEnumerable<LAB03_ED1_G.Models.Paciente>
    <title>Ingreso Paciente | HNGT</title>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lato&family=Lora:wght@500&family=Noto+Serif&family=Quicksand:wght@500&display=swap" rel="stylesheet">

<form asp-action="CargarArchivo" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="formFile" class="form-label">Aqui se muestra el archivo  a importar</label>
        <input type="file" name="postedFile" class="form-control" id="formFile" />
    </div>
    <div class="mb-2">
        <center>
            <input type="submit" value="Import" class="btn btn-danger" />
        </center>
        
    </div>
</form>

<body>
    <div>
        <div style="padding-left:50px; padding-right:50px;">
            <br />
            <h4>Pacientes Nuevos: </h4>
            <br />
            <table class="table">
                <thead style="background-color: #293241 ">
                    <tr>
                        <th style="color:aliceblue">Nombres</th>
                        <th style="color:aliceblue">Apellidos</th>
                        <th style="color:aliceblue">Fecha de nacimiento</th>
                        <th style="color:aliceblue">Sexo</th>
                        <th style="color:aliceblue">Especialización a utilizar</th>
                        <th style="color:aliceblue">Método de ingreso</th>     
                        <th style="color:aliceblue"> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellidos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FDNacimiento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sexo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Especializacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MIngreso)
                            </td>
                            <td>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>


</body>

